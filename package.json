{
  "name": "retreon",
  "version": "0.4.0",
  "description": "A redux toolkit",
  "main": "dist/index.js",
  "module": "dist/tsdx-test.esm.js",
  "typings": "dist/index.d.ts",
  "repository": "github:retreon/retreon",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "prepare": "tsdx build",
    "start": "tsdx watch",
    "test": "./bin/run-tests",
    "test:lint": "eslint src --ext .js,.ts --color",
    "test:unit": "jest --color",
    "// test:unit": "tsdx test",
    "// test:lint": "tsdx lint src",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "redux",
    "toolkit",
    "async",
    "actions",
    "reducer",
    "immer"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "size-limit": [
    {
      "path": "dist/tsdx-test.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/tsdx-test.esm.js",
      "limit": "10 KB"
    }
  ],
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "src/**/__tests__/*.{js,ts}"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "shared-node-browser": true,
      "es6": true
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "peerDependencies": {
    "redux": "*"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.8.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "redux": "^4.0.4",
    "size-limit": "^4.8.0",
    "tsdx": "^0.14.1",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "immer": "^8.0.0"
  }
}
