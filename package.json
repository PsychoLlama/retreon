{
  "name": "retreon",
  "version": "0.6.0",
  "description": "A redux toolkit",
  "main": "dist/index.js",
  "module": "es/index.js",
  "repository": "github:retreon/retreon",
  "homepage": "https://retreon.archetype.foundation",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "prepare": "./bin/compile",
    "test": "./bin/run-tests",
    "test:lint": "eslint src --ext .js,.ts --color",
    "test:unit": "jest --color"
  },
  "keywords": [
    "redux",
    "toolkit",
    "async",
    "actions",
    "reducer",
    "immer"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/es/"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "src/**/__tests__/*.{js,ts}"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "shared-node-browser": true,
      "es6": true
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "peerDependencies": {
    "redux": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "redux": "^4.0.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@babel/runtime": "7.x.x",
    "immer": "^8.0.0"
  }
}
