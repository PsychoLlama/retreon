{
  "name": "retreon",
  "version": "0.4.0-rc.2",
  "description": "A delightful, type-safe redux toolkit",
  "main": "dist/index.js",
  "module": "es/index.js",
  "repository": "https://github.com/PsychoLlama/retreon",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "prepare": "./bin/compile",
    "test": "./bin/run-tests",
    "test:lint": "eslint src --ext .js,.ts --color",
    "test:unit": "jest --color"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/es/"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "peerDependencies": {
    "redux": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.0.5",
    "redux": "^4.0.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@babel/runtime": "7.x.x",
    "immer": "^7.0.14"
  }
}
