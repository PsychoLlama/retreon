{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "declaration": true,
    "target": "es2015",
    "outDir": "dist",
    "newLine": "LF",
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__tests__",
    "src/examples/",
    "dist"
  ]
}
